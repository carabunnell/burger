<div class="jumbotron">
  <img class="imagefluid" src="burger.jpg" alt="burger">
  <h1>Eat-Da-Burger!</h1>
</div>
{{!-- <h1>Burgers!</h1> --}}

{{!-- <h2>Burgers that are not devoured!</h2> --}}
<div class="container">
  <div class="row">
      <div class="col-lg-6">
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-lg-6">
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
      
  </div>
  <div class="row">
    
      <div class="col-lg-12 form-total">
        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Uneaten
          </div>

          <button type="submit">Add Burger</button>
        </form>
      </div>
  </div>
</div>


